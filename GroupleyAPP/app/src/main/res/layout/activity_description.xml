<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:background="@color/colorPrimaryDark"
    tools:context="domain.teamgroupley.groupleyapp.Description">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Title_txt_des"
                style="@style/txtview_style"
                android:enabled="false"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/Catergory_txt_des"
                style="@style/EditText_style"
                android:enabled="false" />

            <EditText
                android:id="@+id/Date_txt_des"
                style="@style/EditText_style"
                android:enabled="false" />

            <EditText
                android:id="@+id/time_txt_des"
                style="@style/EditText_style"
                android:enabled="false" />

            <EditText
                android:id="@+id/address_txt_des"
                style="@style/EditText_style"
                android:enabled="false" />

            <EditText
                android:id="@+id/max_people_txt_des"
                style="@style/EditText_style"
                android:enabled="false" />

            <EditText
                android:id="@+id/des_txt_des"
                style="@style/EditText_style"
                android:enabled="false" />

            <ImageView
                android:id="@+id/image_load_Des"
                style="@style/image_style"/>

            <Button
                android:id="@+id/Join_event_btn_des"
                style="@style/button_style"
                android:text="JOIN EVENT" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
