<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context="domain.teamgroupley.groupleyapp.RegisteredEventDesc"
    android:background="@color/colorPrimaryDark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/Title_txt_reg_des"
                style="@style/txtview_style"
                android:layout_width="match_parent"
                android:enabled="false"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/Catergory_txt_reg_des"
                style="@style/EditText_style"
                android:layout_width="match_parent"
                android:enabled="false" />

            <EditText
                android:id="@+id/Date_txt_reg_des"
                style="@style/EditText_style"
                android:layout_width="match_parent"
                android:enabled="false" />

            <EditText
                android:id="@+id/time_txt_reg_des"
                style="@style/EditText_style"
                android:layout_width="match_parent"
                android:enabled="false" />

            <EditText
                android:id="@+id/address_txt_reg_des"
                style="@style/EditText_style"
                android:layout_width="match_parent"
                android:enabled="false"
                android:layout_height="80dp"/>

            <EditText
                android:id="@+id/max_people_txt_reg_des"
                style="@style/EditText_style"
                android:layout_width="match_parent"
                android:enabled="false" />

            <EditText
                android:id="@+id/des_txt_des_reg_des"
                style="@style/EditText_style"
                android:layout_width="match_parent"
                android:enabled="false"
                android:layout_height="100dp"/>

            <ImageView
                android:id="@+id/image_load_Reg"
                style="@style/image_style"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <Button
                android:id="@+id/Attending"
                style="@style/button_style"
                android:layout_width="match_parent"
                android:text="People Attending" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
