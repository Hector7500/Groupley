<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="domain.teamgroupley.groupleyapp.Filter">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/textView55"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="SORT BY:"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/background_dark"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/SortbySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Filter BY:"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/background_dark"
            android:textSize="36sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01">

            <RadioButton
                android:id="@+id/ALLEVENTSBTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ALL Interests "
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/YOUREVEENTSBUTTON"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your Interests "
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/common_google_signin_btn_text_light_pressed"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/SPEFICEVENTSBTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SPEFIC INTERESTs"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textStyle="bold" />

        </RadioGroup>

        <Spinner
            android:id="@+id/Speficspiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.14" />

        <TextView
            android:id="@+id/textView51"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.27" />

        <Button
            android:id="@+id/FilterSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FILTEr"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
