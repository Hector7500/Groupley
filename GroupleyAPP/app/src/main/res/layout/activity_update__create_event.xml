<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="domain.teamgroupley.groupleyapp.Update_Create_event">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/activity_Create_Event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:background="@color/colorPrimaryDark"
        tools:context="domain.teamgroupley.groupleyapp.Create_Event">

        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView10"
                        style="@style/txtview_style"
                        android:layout_width="match_parent"
                        android:text="Update Create Event "
                        android:textSize="38sp" />

                    <EditText
                        android:id="@+id/Title_txt_update"
                        style="@style/EditText_style"
                        android:hint="Title"/>

                    <Spinner
                        android:id="@+id/Category_SPINNER_update"
                        style="@style/Spinner_Style" />

                    <EditText
                        android:id="@+id/Date_txt_update"
                        style="@style/EditText_style"
                        android:layout_width="match_parent"
                        android:editable="false"
                        android:hint="Date"/>

                    <EditText
                        android:id="@+id/time_txt_update"
                        style="@style/EditText_style"
                        android:layout_width="match_parent"
                        android:editable="false"
                        android:hint="Time"/>

                    <EditText
                        android:id="@+id/address_txt_update"
                        style="@style/EditText_style"
                        android:layout_width="match_parent"
                        android:hint="Street"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <EditText
                            android:id="@+id/city_txt_update"
                            style="@style/EditText_style"
                            android:hint="City"
                            android:inputType="textPersonName"
                            android:layout_width="159dp"
                            android:layout_weight="0.24" />

                        <EditText
                            android:id="@+id/state_txt_update"
                            style="@style/EditText_style"
                            android:layout_width="175dp"
                            android:hint="State"
                            android:inputType="textPersonName" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <EditText
                            android:id="@+id/zip_txt_update"
                            style="@style/EditText_style"
                            android:inputType="number"
                            android:hint="Zip Code"
                            android:layout_width="156dp"
                            android:layout_weight="0.24" />
                        <EditText
                            android:id="@+id/country_txt_update"
                            style="@style/EditText_style"
                            android:hint="Country"
                            android:layout_width="166dp"
                            android:layout_weight="0.22" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/max_people_txt_update"
                        style="@style/EditText_style"
                        android:layout_width="match_parent"
                        android:inputType="number"
                        android:hint="max people"/>

                    <EditText
                        android:id="@+id/des_txt_update"
                        style="@style/EditText_style"
                        android:layout_width="match_parent"
                        android:hint="description"/>

                    <ImageView
                        android:id="@+id/img_update"
                        style="@style/image_style"/>

                    <Button
                        android:id="@+id/Update_event_btn"
                        style="@style/button_style"
                        android:layout_width="match_parent"
                        android:text="Update Event" />

                </LinearLayout>
            </ScrollView>
        </FrameLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/navigation_menu"></android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>
</android.support.v4.widget.DrawerLayout>
